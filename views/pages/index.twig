{% extends 'layouts/base.twig' %}

{% block page %}

	<div class="wrapper pb-80">
		{% if override_page_title != true %}
			<div class="page-heading container pt-40 px-20 md:px-40 lg:px-60">
				<h1 class="heading-1">{{ post.title }}</h1>
			</div>
		{% endif %}
		{{ post.content }}
	</div>
{% endblock %}
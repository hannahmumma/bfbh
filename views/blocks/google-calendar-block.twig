{% extends "layouts/block.twig" %}

{% set block_name = 'acf-google-calendar' %}
{% set block_classes = 'bg-light-gray' %}

{% block content %}

	<div class="block-inner">

		{% if block_fields.calendar_title or block_fields.calendar_description %}
			<div class="block-header mb-20">
				<h2 class="heading-2 mb-20">{{ block_fields.calendar_title }}</h2>
				<p class="p-body">{{ block_fields.calendar_description }}</p>
			</div>
		{% endif %}

		<div class="calendar-wrapper">
			<iframe src="https://calendar.google.com/calendar/embed?height=600&wkst=1&bgcolor=%23f5f5f5&ctz=America%2FNew_York&showTitle=0&src=YmZiaDIwQGdtYWlsLmNvbQ&color=%23039BE5" style="border-width:0" width="100%" height="600" frameborder="0" scrolling="no" title="Google Calendar"></iframe>
		</div>

	</div>

{% endblock %}